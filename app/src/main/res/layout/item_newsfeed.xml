<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:weightSum="3"
        android:background="@color/light_blue"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp">
            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="250dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginStart="5dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="250dp"
                    android:layout_gravity="center">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/profileImg"
                        android:src="@drawable/user_icon_black"
                        android:scaleType="fitCenter"/>
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="10dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvUsername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/username"
                        android:textStyle="bold"
                        android:textSize="20sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hyphen"
                        android:id="@+id/tvHyphen"/>
                    <TextView
                        android:id="@+id/tvPostDesciption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/topic"
                        android:textSize="20sp"
                        android:textStyle="bold"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tvDateTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_12_12_2012_12_12_12"
                            android:textSize="16sp"/>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvPostContent"
                    android:text="@string/description"
                    android:textSize="20sp"/>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:background="@color/white">
            <ImageView
                android:id="@+id/imgPost"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:id="@+id/tvDocumentName"
                android:text="@string/document_url"
                android:textAlignment="center"
                android:layout_gravity="center" />
        </LinearLayout>

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:padding="2dp"
           android:background="@color/grey">
           <ImageButton
               android:layout_width="48dp"
               android:layout_height="48dp"
               android:id="@+id/btnLike"
               android:layout_marginStart="5dp"
               app:layout_constraintLeft_toLeftOf="parent"
               android:src="@drawable/like_icon"
               android:background="@drawable/circlebtn"
               android:backgroundTint="@color/white"
               android:scaleType="fitCenter"
               android:padding="5dp"
               tools:ignore="MissingConstraints" />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/tvLikeNumber"
               android:textSize="15sp"
               android:layout_marginStart="2dp"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintLeft_toRightOf="@+id/btnLike"
               tools:ignore="MissingConstraints" />
           <ImageButton
               android:layout_width="48dp"
               android:layout_height="48dp"
               android:id="@+id/btnDislike"
               android:src="@drawable/dislike_icon"
               android:layout_marginStart="5dp"
               app:layout_constraintLeft_toRightOf="@+id/tvLikeNumber"
               android:background="@drawable/circlebtn"
               android:backgroundTint="@color/white"
               android:scaleType="fitCenter"
               android:padding="5dp"
               tools:ignore="MissingConstraints" />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/tvDislikeNumber"
               android:textSize="15sp"
               android:layout_marginStart="2dp"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintLeft_toRightOf="@+id/btnDislike"/>
           <ImageButton
               android:layout_width="48dp"
               android:layout_height="48dp"
               android:id="@+id/btnComment"
               android:src="@drawable/comment_icon"
               android:layout_marginStart="5dp"
               app:layout_constraintLeft_toRightOf="@+id/tvDislikeNumber"
               android:background="@drawable/circlebtn"
               android:backgroundTint="@color/white"
               android:scaleType="fitCenter"
               android:padding="10dp"
               tools:ignore="MissingConstraints" />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/tvCommentNumber"
               android:textSize="15sp"
               android:layout_marginStart="2dp"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintLeft_toRightOf="@+id/btnComment"/>
           <ImageButton
               android:layout_width="48dp"
               android:layout_height="48dp"
               android:layout_marginStart="170dp"
               android:id="@+id/btnSave"
               android:layout_marginEnd="5dp"
               app:layout_constraintRight_toRightOf="parent"
               android:src="@drawable/download_icon_2"
               android:background="@drawable/circlebtn"
               android:backgroundTint="@color/white"
               android:scaleType="fitCenter"
               android:padding="8dp"
               tools:ignore="MissingConstraints" />


       </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>
</LinearLayout>
