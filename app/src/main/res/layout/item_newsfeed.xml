<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:weightSum="3"
        android:background="@color/light_blue"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp">
            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                app:cardCornerRadius="250dp"
                app:cardBackgroundColor="@color/white"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="250dp"
                    android:layout_gravity="center">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/profileImg"
                        android:src="@drawable/user_icon_black"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:id="@+id/tvUsername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/username"
                        android:textStyle="bold"
                        android:textSize="20sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hyphen"
                        android:id="@+id/tvHyphen"/>

                    <TextView
                        android:id="@+id/tvPostDesciption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/topic"
                        android:textSize="20sp"
                        />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvPostContent"
                    android:text="@string/description"
                    android:textSize="20sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:id="@+id/tvDateTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_12_12_2012_12_12_12"
                        android:textSize="16sp"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            android:background="@color/white">

            <ImageView
                android:id="@+id/imgPost"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:src="@drawable/loading" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:id="@+id/tvDocumentName"
                android:text="@string/document_url"
                android:textAlignment="center"
                android:clickable="true"
                android:layout_gravity="center"
                />

        </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@color/grey">
           <ImageButton
               android:layout_width="48dp"
               android:layout_height="48dp"
               android:layout_marginStart="15dp"
               android:id="@+id/btnLike"
               android:importantForAccessibility="no"
               android:src="@drawable/like_icon_white"
               android:background="@drawable/circlebtn"
               android:backgroundTint="@color/grey"
               android:scaleType="fitCenter"
               android:padding="5dp"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/white"
               android:id="@+id/tvLikeNumber"/>
           <ImageButton
               android:layout_width="48dp"
               android:layout_height="48dp"
               android:layout_marginStart="15dp"
               android:id="@+id/btnDislike"
               android:contentDescription="TODO"
               android:src="@drawable/dislike_icon_white"
               android:background="@drawable/circlebtn"
               android:backgroundTint="@color/grey"
               android:scaleType="fitCenter"
               android:padding="5dp"/>

           <TextView
               android:id="@+id/tvDislikeNumber"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/white" />
           <ImageButton
               android:layout_width="48dp"
               android:layout_height="48dp"
               android:layout_marginStart="15dp"
               android:id="@+id/btnComment"
               android:contentDescription="TODO"
               android:src="@drawable/comment_icon_white"
               android:background="@drawable/circlebtn"
               android:backgroundTint="@color/grey"
               android:scaleType="fitCenter"
               android:padding="5dp"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/white"
               android:id="@+id/tvCommentNumber"/>
           <ImageButton
               android:layout_width="48dp"
               android:layout_height="48dp"
               android:layout_marginStart="170dp"
               android:id="@+id/btnSave"
               android:importantForAccessibility="no"
               android:src="@drawable/download_icon_white_2"
               android:background="@drawable/circlebtn"
               android:backgroundTint="@color/grey"
               android:scaleType="fitCenter"
               android:padding="5dp"/>


       </LinearLayout>


    </LinearLayout>
</LinearLayout>
