<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/rltTitleBarConversation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvAppname"
            android:text="@string/docsavior"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            tools:ignore="RelativeOverlap" />

        <ImageButton
            android:id="@+id/btnMakeGroup"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/make_group"
            android:scaleType="centerCrop"
            android:layout_toStartOf="@id/btnLookupConversation"
            android:background="@drawable/circlebtn"
            android:backgroundTint="@color/light_blue"
            android:padding="10dp"/>



        <ImageButton
            android:id="@+id/btnLookupConversation"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/lookup_icon_black"
            android:scaleType="centerCrop"
            android:layout_toStartOf="@id/btnProfile"
            android:background="@drawable/circlebtn"
            android:backgroundTint="@color/light_blue"
            android:padding="10dp"/>
        <ImageButton
            android:id="@+id/btnProfile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/user_icon_black"
            android:scaleType="centerInside"
            android:background="@drawable/circlebtn"
            android:backgroundTint="@color/light_blue"
            android:padding="10dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rltTitleBarConversation"
        android:id="@+id/rltLookupConversation">
        <ImageButton
            android:id="@+id/btnClose"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/circlebtn"
            android:backgroundTint="@color/blue"
            android:contentDescription="@string/todo"
            android:scaleType="centerInside"
            android:src="@drawable/close_icon"
            android:padding="8dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/edLookup"
            android:background="@drawable/edittext"
            android:layout_toEndOf="@+id/btnClose"
            android:backgroundTint="@color/light_blue"
            android:layout_marginStart="5dp"
            android:hint="@string/type_to_look_up"
            android:importantForAutofill="no"
            android:inputType="text" />
        <ImageButton
            android:id="@+id/btnPost"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/circlebtn"
            android:backgroundTint="@color/blue"
            android:contentDescription="@string/todo"
            android:scaleType="centerInside"
            android:src="@drawable/lookup_icon_white"
            android:padding="10dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rltLookupConversation">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvLookupConversation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp" />


    </RelativeLayout>



</RelativeLayout>