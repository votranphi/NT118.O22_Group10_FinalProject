<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:backgroundTint="@color/light_blue"
    android:background="@drawable/screen_bounding">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rltTitleBar">
            <ImageButton
                android:id="@+id/btnClose"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/circlebtn"
                android:backgroundTint="@color/blue"
                android:contentDescription="@string/todo"
                android:scaleType="centerInside"
                android:src="@drawable/close_icon"
                android:padding="8dp"/>
            <TextView
                android:id="@+id/tvCreatePost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/btnClose"
                android:text="@string/create_a_post"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="RelativeOverlap" />
            <ImageButton
                android:id="@+id/btnPost"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/circlebtn"
                android:backgroundTint="@color/blue"
                android:contentDescription="@string/todo"
                android:scaleType="centerInside"
                android:src="@drawable/post_icon"
                android:padding="10dp"/>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/horizontal_line"
            android:layout_below="@+id/rltTitleBar"
            android:background="@color/grey"
            android:height="1dp"
            android:layout_marginTop="20dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/rltworkSpace"
            android:layout_below="@+id/horizontal_line">

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/btnUser"
                android:contentDescription="@string/todo"
                android:src="@drawable/user_icon_black"
                android:background="@drawable/circlebtn"
                android:backgroundTint="@color/white"
                android:scaleType="centerCrop"
                android:padding="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvUsername"
                android:text="@string/username"
                android:layout_toEndOf="@+id/btnUser"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"/>
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/edPostDesciption"
                android:layout_below="@+id/tvUsername"
                android:layout_toEndOf="@+id/btnUser"
                android:textSize="20sp"
                android:background="@drawable/edittext"
                android:layout_marginStart="10dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edPostContent"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/edPostDesciption"
                android:background="@drawable/edittext"
                android:hint="@string/description"
                android:inputType="text"
                android:autofillHints="string" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvSelectedFile"
                android:layout_below="@+id/edPostContent"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rltworkSpace"
            android:layout_marginTop="10dp"
            android:id="@+id/rlt_btnPictureVideo">

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/btnPictureVideo"
                android:text="@string/picture_video"
                android:textColor="@color/black"
                android:textSize="20sp"/>
            <ImageButton
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:id="@+id/imgPicture"
                android:background="@drawable/circlebtn"
                android:contentDescription="@string/todo"
                android:scaleType="fitXY"
                android:src="@drawable/picture_icon"
                android:padding="5dp"
                android:layout_marginStart="5dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlt_btnPictureVideo"
            android:layout_marginTop="10dp"
            android:id="@+id/rlt_btnFile">
            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/btnFile"
                android:text="@string/file"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"/>
            <ImageButton
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:background="@drawable/circlebtn"
                android:contentDescription="@string/todo"
                android:scaleType="fitXY"
                android:src="@drawable/file_icon"
                android:padding="5dp"
                android:layout_marginStart="5dp"/>
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>