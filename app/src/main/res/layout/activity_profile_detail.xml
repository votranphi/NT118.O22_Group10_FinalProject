<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/light_blue">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvPersonalInformation"
        android:text="@string/personal_information"
        android:layout_marginTop="30dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginStart="15dp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rltUsername"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tvPersonalInformation">

        <TextView
            android:layout_marginTop="7dp"
            android:id="@+id/tvUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/username"
            android:textColor="@android:color/darker_gray"
            android:textSize="20sp"

            />
        <EditText
            android:id="@+id/etUsername"
            android:importantForAutofill="no"
            android:inputType="text"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tvUsername"
            android:layout_marginStart="49dp"
            android:text="@string/the_name"
            tools:ignore="LabelFor" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rltEmail"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/rltUsername">

        <TextView
            android:layout_marginTop="7dp"
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email"
            android:textColor="@android:color/darker_gray"
            android:textSize="20sp"

            />
        <EditText
            android:id="@+id/etEmail"
            android:importantForAutofill="no"
            android:inputType="textEmailAddress"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tvEmail"
            android:layout_marginStart="90dp"
            android:text="@string/_22521648_gm_uit_edu_vn"
            tools:ignore="LabelFor" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rltStatus"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/rltEmail">

        <TextView
            android:layout_marginTop="7dp"
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/status"
            android:textColor="@android:color/darker_gray"
            android:textSize="20sp"

            />
        <EditText
            android:id="@+id/etStatus"
            android:importantForAutofill="no"
            android:inputType="text"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tvStatus"
            android:layout_marginStart="83dp"
            android:text="@string/offline"
            tools:ignore="LabelFor" />
    </RelativeLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rltGender"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/rltStatus">

        <TextView
            android:layout_marginTop="7dp"
            android:id="@+id/tvGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gender"
            android:textColor="@android:color/darker_gray"
            android:textSize="20sp"

             />
        <EditText
            android:id="@+id/etGender"
            android:importantForAutofill="no"
            android:inputType="text"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tvGender"
            android:layout_marginStart="75dp"
            android:text="@string/nam"
            tools:ignore="LabelFor" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rltGender"
        android:id="@+id/rltBirthday"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_marginTop="7dp"
            android:id="@+id/tvBirthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/date_of_birth"
            android:textColor="@android:color/darker_gray"
            />

        <EditText
            android:id="@+id/etBirthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAutofill="no"
            android:inputType="date"
            android:textSize="20sp"
            android:layout_toEndOf="@id/tvBirthday"
            android:layout_marginStart="27dp"
            android:text="@string/_20_01_1999"
            tools:ignore="LabelFor" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rltBirthday"
        android:id="@+id/rltPhone"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_marginTop="7dp"
            android:id="@+id/tvPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/phone"
            android:textColor="@android:color/darker_gray"
            />

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAutofill="no"
            android:inputType="phone"
            android:textSize="20sp"
            android:layout_toEndOf="@id/tvPhone"
            android:layout_marginStart="82dp"
            android:text="@string/phone_number"
            tools:ignore="LabelFor" />
    </RelativeLayout>


    <!--<Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnEditProfile"
        android:layout_below="@+id/rltPhone"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="@string/edit_profile"
        android:layout_marginBottom="30dp"
        android:padding="20dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:backgroundTint="@color/grey"/>-->

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/rltEditProfile"
        android:layout_below="@+id/rltPhone"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:padding="20dp"
        android:background="@drawable/bg_message_white_blue_corner"
        android:clickable="true"
        android:focusable="true"
        android:backgroundTint="@color/grey"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imgEditProfileIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:importantForAccessibility="no"
            android:src="@drawable/edit_profile"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/tvEditProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_profile"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_toEndOf="@id/imgEditProfileIcon"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</RelativeLayout>