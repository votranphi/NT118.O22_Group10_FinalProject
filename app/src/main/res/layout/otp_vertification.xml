<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/light_blue">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logo"
        android:text="Logo here"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:text="OTP Vertification"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"/>

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/tvOtpDescription"
      android:text="One Time Password (OTP)\nhas been sent to your Email"
      android:layout_below="@+id/title"
      android:layout_centerHorizontal="true"
      android:textSize="20dp"
      android:lines="2"
      android:textAlignment="center"/>

    <RelativeLayout
        android:id="@+id/rltOtp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvOtpDescription"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp">

        <EditText
            android:id="@+id/edOtp1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:maxLength="1"
            android:background="@color/white" />

        <EditText
            android:id="@+id/edOtp2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:maxLength="1"
            android:layout_toRightOf="@+id/edOtp1"
            android:background="@color/white" />

        <EditText
            android:id="@+id/edOtp3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:maxLength="1"
            android:layout_toRightOf="@+id/edOtp2"
            android:background="@color/white" />

        <EditText
            android:id="@+id/edOtp4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:maxLength="1"
            android:layout_toRightOf="@+id/edOtp3"
            android:background="@color/white" />

        <EditText
            android:id="@+id/edOtp5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:maxLength="1"
            android:layout_toRightOf="@+id/edOtp4"
            android:background="@color/white" />

        <EditText
            android:id="@+id/edOtp6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/edOtp5"
            android:maxLength="1"
            android:background="@color/white" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvResendOTP"
        android:layout_below="@+id/rltOtp"
        android:layout_alignParentRight="true"
        android:text="Resent OTP in time"
        android:layout_marginRight="20dp"
        android:textSize="18dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnRecoverPassword"
        android:layout_below="@+id/tvResendOTP"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Send new password"
        android:textSize="20dp"
        android:padding="20dp"
        android:textColor="@color/black"
        android:backgroundTint="@color/blue"/>
</RelativeLayout>