<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:backgroundTint="@color/light_blue"
    android:background="@drawable/screen_bounding">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rltTitleBar">
            <ImageButton
                android:id="@+id/btnClose"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/circlebtn"
                android:backgroundTint="@color/blue"
                android:scaleType="centerInside"
                android:src="@drawable/close_icon"
                android:padding="8dp"/>
            <TextView
                android:id="@+id/tvPostDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/btnClose"
                android:text="Post detail"
                android:textSize="20dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/horizontal_line"
            android:layout_below="@+id/rltTitleBar"
            android:background="@color/grey"
            android:height="1dp"
            android:layout_marginTop="20dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/rltPostInfo"
            android:layout_below="@+id/horizontal_line">



            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="250dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginStart="5dp"
                android:id="@+id/btnUser"
                android:layout_above="@+id/llPost"
                android:layout_marginBottom="6dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:cardCornerRadius="250dp"
                    android:layout_gravity="center">
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:id="@+id/profileImg"
                        android:importantForAccessibility="no"
                        android:src="@drawable/user_icon_black"
                        android:scaleType="centerCrop"
                        android:clickable="true"/>
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvUsername"
                android:text="@string/username"
                android:layout_toEndOf="@+id/btnUser"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvPostDesciption"
                android:text="- topic"
                android:layout_toEndOf="@+id/tvUsername"
                android:textSize="20sp"
                android:layout_marginStart="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvPostContent"
                android:layout_below="@+id/tvUsername"
                android:layout_toEndOf="@+id/btnUser"
                android:layout_marginStart="10dp"
                android:textSize="20sp"
                android:text="description"/>

            <LinearLayout
                android:id="@+id/llPost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_below="@+id/tvPostContent">

                <ImageView
                    android:id="@+id/imgPost"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:src="@drawable/loading" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:id="@+id/tvDocumentName"
                    android:text="@string/document_url"
                    android:textAlignment="center"
                    android:clickable="true"
                    android:layout_gravity="center"
                    />

            </LinearLayout>

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:id="@+id/btnLike"
                android:layout_below="@+id/llPost"
                android:background="@drawable/circlebtn"
                android:backgroundTint="@color/white"
                android:src="@drawable/like_icon"
                android:padding="10dp"
                android:scaleType="centerInside"/>
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:id="@+id/btnDislike"
                android:layout_below="@+id/llPost"
                android:layout_toRightOf="@+id/btnLike"
                android:layout_marginLeft="10dp"
                android:background="@drawable/circlebtn"
                android:backgroundTint="@color/white"
                android:src="@drawable/dislike_icon"
                android:padding="10dp"
                android:scaleType="centerInside"/>
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:id="@+id/btnDownload"
                android:layout_below="@+id/llPost"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/circlebtn"
                android:backgroundTint="@color/white"
                android:src="@drawable/download_icon_2"
                android:padding="10dp"
                android:scaleType="centerInside"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rltPostInfo"
            android:layout_marginTop="5dp"
            android:id="@+id/rltUserComment"
            android:layout_above="@+id/rltComment">
            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/lvComment"/>

            <TextView
                android:id="@+id/tvNothing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="@string/there_is_nothing_to_show"
                android:visibility="gone"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/rltComment"
            android:layout_alignParentBottom="true">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/edComment"
                android:background="@drawable/screen_bounding"
                android:padding="10dp"
                android:hint="Write a comment"/>
            <ImageButton
                android:id="@+id/btnPost"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/circlebtn"
                android:backgroundTint="@color/blue"
                android:scaleType="centerInside"
                android:src="@drawable/post_icon"
                android:padding="10dp"/>
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>