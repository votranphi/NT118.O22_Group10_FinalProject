<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:ignore="ExtraText">
    <RelativeLayout
        android:id="@+id/rltTitleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvAppname"
            android:text="@string/docsavior"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            tools:ignore="RelativeOverlap" />

        <ImageButton
            android:id="@+id/btnProfile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/user_icon_black"
            android:scaleType="centerInside"
            android:background="@drawable/circlebtn"
            android:backgroundTint="@color/light_blue"
            android:padding="10dp"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rltNotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/rltTitleBar"
        android:background="@drawable/bg_message_white_blue_corner"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/imgNotification"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/notification"
            android:background="@drawable/circlebtn"
            android:backgroundTint="@color/white"
            android:scaleType="centerCrop"
            android:padding="10dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tvNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notification"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_toEndOf="@id/imgNotification"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rltChangePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/rltNotification"
        android:background="@drawable/bg_message_white_blue_corner"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/imgChangePassword"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/change_password"
            android:background="@drawable/circlebtn"
            android:backgroundTint="@color/white"
            android:scaleType="centerCrop"
            android:padding="10dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tvChangePassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/change_password"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_toEndOf="@id/imgChangePassword"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rltLogOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/rltChangePassword"
        android:background="@drawable/bg_message_white_blue_corner"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/imgLogOut"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/log_out"
            android:background="@drawable/circlebtn"
            android:backgroundTint="@color/white"
            android:scaleType="centerCrop"
            android:padding="10dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tvLogOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/log_out"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_toEndOf="@id/imgLogOut"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp" />

    </RelativeLayout>



</RelativeLayout>